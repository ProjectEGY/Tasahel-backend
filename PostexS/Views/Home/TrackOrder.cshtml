@using PostexS.Models.Enums;
@{
    Layout = null;
    var orderFound = ViewBag.OrderFound != null && (bool)ViewBag.OrderFound;
    var error = ViewBag.Error as string;
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>تتبع الطلب - تساهيل إكسبريس</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;600;700;800&display=swap" rel="stylesheet" />
    <link href="/css/landing.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Cairo', sans-serif;
            background: linear-gradient(135deg, #142B50 0%, #1B3764 50%, #264D8A 100%);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        .track-page-nav {
            background: rgba(255,255,255,0.1);
            backdrop-filter: blur(10px);
            padding: 15px 0;
        }
        .track-page-nav a {
            color: #fff;
            text-decoration: none;
            font-weight: 600;
            font-size: 1.2rem;
        }
        .track-page-nav a i {
            margin-left: 8px;
        }
        .track-container {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 30px 15px;
        }
        .track-main-card {
            background: #fff;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            overflow: hidden;
            max-width: 700px;
            width: 100%;
        }
        .track-card-header {
            background: linear-gradient(135deg, #1B3764, #264D8A);
            color: #fff;
            text-align: center;
            padding: 30px 20px;
        }
        .track-card-header i {
            font-size: 3rem;
            margin-bottom: 10px;
            display: block;
        }
        .track-card-header h2 {
            font-weight: 800;
            margin: 0;
        }
        .track-card-header p {
            opacity: 0.8;
            margin: 5px 0 0;
        }
        .track-card-body {
            padding: 30px;
        }
        .track-input-group {
            position: relative;
            margin-bottom: 15px;
        }
        .track-input-group i {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #1B3764;
            font-size: 1.1rem;
            z-index: 2;
        }
        .track-input-group input {
            padding: 14px 45px 14px 14px;
            border: 2px solid #e0e0e0;
            border-radius: 12px;
            font-size: 1rem;
            width: 100%;
            transition: 0.3s;
            font-family: 'Cairo', sans-serif;
        }
        .track-input-group input:focus {
            border-color: #264D8A;
            outline: none;
            box-shadow: 0 0 0 4px rgba(27,55,100,0.1);
        }
        .btn-track {
            background: linear-gradient(135deg, #1B3764, #264D8A);
            color: #fff;
            border: none;
            padding: 14px;
            width: 100%;
            border-radius: 12px;
            font-size: 1.1rem;
            font-weight: 700;
            cursor: pointer;
            transition: 0.3s;
            font-family: 'Cairo', sans-serif;
        }
        .btn-track:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(27,55,100,0.4);
            color: #fff;
        }
        .error-box {
            background: #fff3f3;
            border: 1px solid #ffcdd2;
            border-radius: 12px;
            padding: 15px;
            text-align: center;
            color: #d32f2f;
            margin-bottom: 15px;
        }
        .error-box i {
            font-size: 1.5rem;
            display: block;
            margin-bottom: 5px;
        }
        /* Result styles */
        .result-section {
            margin-top: 25px;
        }
        .order-status-badge {
            display: inline-block;
            padding: 8px 20px;
            border-radius: 50px;
            font-weight: 700;
            font-size: 1rem;
            margin-bottom: 20px;
        }
        .status-placed { background: #e3f2fd; color: #1565c0; }
        .status-assigned { background: #fff3e0; color: #e65100; }
        .status-delivered { background: #e8f5e9; color: #2e7d32; }
        .status-waiting { background: #fff8e1; color: #f57f17; }
        .status-rejected { background: #fce4ec; color: #c62828; }
        .status-returned { background: #fbe9e7; color: #bf360c; }
        .status-finished { background: #e8eaf6; color: #283593; }
        .status-completed { background: #e0f2f1; color: #00695c; }
        .status-partial { background: #f3e5f5; color: #6a1b9a; }

        .order-info-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
        }
        .order-info-table tr td {
            padding: 12px 15px;
            border-bottom: 1px solid #f0f0f0;
        }
        .order-info-table tr td:first-child {
            font-weight: 700;
            color: #1B3764;
            width: 35%;
        }
        .order-info-table tr:last-child td {
            border-bottom: none;
        }

        /* Timeline */
        .order-timeline {
            position: relative;
            padding: 20px 0;
        }
        .timeline-item {
            display: flex;
            align-items: flex-start;
            margin-bottom: 20px;
            position: relative;
        }
        .timeline-dot {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1rem;
            flex-shrink: 0;
            margin-left: 15px;
        }
        .timeline-dot.active {
            background: #264D8A;
            color: #fff;
        }
        .timeline-dot.done {
            background: #2e7d32;
            color: #fff;
        }
        .timeline-dot.pending {
            background: #e0e0e0;
            color: #999;
        }
        .timeline-content h6 {
            margin: 0;
            font-weight: 700;
        }
        .timeline-content p {
            margin: 2px 0 0;
            font-size: 0.85rem;
            color: #999;
        }

        .back-link {
            text-align: center;
            margin-top: 20px;
        }
        .back-link a {
            color: rgba(255,255,255,0.8);
            text-decoration: none;
            font-weight: 600;
        }
        .back-link a:hover {
            color: #fff;
        }
    </style>
</head>
<body>
    <!-- Nav -->
    <div class="track-page-nav">
        <div class="container">
            <a href="/"><img src="/Content/Images/TasahelExpress.png" alt="تساهيل إكسبريس" style="height:35px; margin-left:8px; vertical-align:middle;" /> تساهيل إكسبريس</a>
        </div>
    </div>

    <!-- Main -->
    <div class="track-container">
        <div>
            <div class="track-main-card">
                <div class="track-card-header">
                    <i class="fas fa-search-location"></i>
                    <h2>تتبع طلبك</h2>
                    <p>أدخل كود الطلب ورقم تليفونك للتحقق</p>
                </div>
                <div class="track-card-body">
                    @if (!string.IsNullOrEmpty(error))
                    {
                        <div class="error-box">
                            <i class="fas fa-exclamation-triangle"></i>
                            @error
                        </div>
                    }

                    <form method="post" action="/Home/TrackOrder">
                        <div class="track-input-group">
                            <i class="fas fa-barcode"></i>
                            <input type="text" name="code" placeholder="كود الطلب" value="@(ViewBag.Code)" required />
                        </div>
                        <div class="track-input-group">
                            <i class="fas fa-phone-alt"></i>
                            <input type="text" name="phone" placeholder="رقم التليفون للتحقق" value="@(ViewBag.Phone)" required />
                        </div>
                        <button type="submit" class="btn-track">
                            <i class="fas fa-search"></i> تتبع الطلب
                        </button>
                    </form>

                    @if (orderFound)
                    {
                        var status = (OrderStatus)ViewBag.OrderStatus;
                        var statusClass = "";
                        var statusText = "";

                        switch (status)
                        {
                            case OrderStatus.Placed:
                                statusClass = "status-placed";
                                statusText = "تم الإنشاء";
                                break;
                            case OrderStatus.Assigned:
                                statusClass = "status-assigned";
                                statusText = "مع المندوب";
                                break;
                            case OrderStatus.Delivered:
                            case OrderStatus.Delivered_With_Edit_Price:
                                statusClass = "status-delivered";
                                statusText = "تم التسليم";
                                break;
                            case OrderStatus.Waiting:
                                statusClass = "status-waiting";
                                statusText = "قيد الانتظار";
                                break;
                            case OrderStatus.Rejected:
                                statusClass = "status-rejected";
                                statusText = "مرفوض";
                                break;
                            case OrderStatus.Returned:
                            case OrderStatus.Returned_And_Paid_DeliveryCost:
                            case OrderStatus.Returned_And_DeliveryCost_On_Sender:
                                statusClass = "status-returned";
                                statusText = "مرتجع";
                                break;
                            case OrderStatus.Finished:
                                statusClass = "status-finished";
                                statusText = "منتهي";
                                break;
                            case OrderStatus.Completed:
                                statusClass = "status-completed";
                                statusText = "مكتمل";
                                break;
                            case OrderStatus.PartialDelivered:
                                statusClass = "status-partial";
                                statusText = "تسليم جزئي";
                                break;
                            case OrderStatus.PartialReturned:
                                statusClass = "status-partial";
                                statusText = "مرتجع جزئي";
                                break;
                        }

                        <div class="result-section">
                            <hr />
                            <div class="text-center">
                                <span class="order-status-badge @statusClass">
                                    <i class="fas fa-info-circle"></i> @statusText
                                </span>
                            </div>

                            <table class="order-info-table">
                                <tr>
                                    <td><i class="fas fa-hashtag"></i> كود الطلب</td>
                                    <td>@ViewBag.OrderCode</td>
                                </tr>
                                <tr>
                                    <td><i class="fas fa-user"></i> اسم المستلم</td>
                                    <td>@ViewBag.OrderClientName</td>
                                </tr>
                                <tr>
                                    <td><i class="fas fa-map-marker-alt"></i> المحافظة</td>
                                    <td>@ViewBag.OrderCity</td>
                                </tr>
                                <tr>
                                    <td><i class="fas fa-home"></i> العنوان</td>
                                    <td>@ViewBag.OrderAddress</td>
                                </tr>
                                <tr>
                                    <td><i class="fas fa-money-bill-wave"></i> المبلغ</td>
                                    <td>@ViewBag.OrderCost جنيه</td>
                                </tr>
                                <tr>
                                    <td><i class="fas fa-calendar-alt"></i> تاريخ الطلب</td>
                                    <td>
                                        @{
                                            var orderDate = (DateTime)ViewBag.OrderDate;
                                            var localDate = TimeZoneInfo.ConvertTimeFromUtc(orderDate, TimeZoneInfo.FindSystemTimeZoneById("Sudan Standard Time"));
                                        }
                                        @localDate.ToString("dd MMMM yyyy - hh:mm tt")
                                    </td>
                                </tr>
                                @if (ViewBag.OrderLastUpdated != null)
                                {
                                    <tr>
                                        <td><i class="fas fa-clock"></i> آخر تحديث</td>
                                        <td>
                                            @{
                                                var lastUpdated = (DateTime)ViewBag.OrderLastUpdated;
                                                var localLastUpdated = TimeZoneInfo.ConvertTimeFromUtc(lastUpdated, TimeZoneInfo.FindSystemTimeZoneById("Sudan Standard Time"));
                                            }
                                            @localLastUpdated.ToString("dd MMMM yyyy - hh:mm tt")
                                        </td>
                                    </tr>
                                }
                            </table>

                            <!-- Timeline -->
                            <h6 class="mt-4 mb-3" style="font-weight:700; color:#1B3764;"><i class="fas fa-route"></i> مراحل الطلب</h6>
                            <div class="order-timeline">
                                @{
                                    var steps = new List<(string icon, string title, bool done)>
                                    {
                                        ("fas fa-plus-circle", "تم إنشاء الطلب", true),
                                        ("fas fa-motorcycle", "تم التعيين للمندوب",
                                            status != OrderStatus.Placed),
                                        ("fas fa-spinner", "قيد التوصيل",
                                            status == OrderStatus.Waiting || status == OrderStatus.Delivered || status == OrderStatus.Delivered_With_Edit_Price || status == OrderStatus.Finished || status == OrderStatus.Completed || status == OrderStatus.PartialDelivered || status == OrderStatus.Returned || status == OrderStatus.Returned_And_Paid_DeliveryCost || status == OrderStatus.Returned_And_DeliveryCost_On_Sender || status == OrderStatus.PartialReturned || status == OrderStatus.Rejected),
                                        ("fas fa-check-double", "تم التسليم / انتهاء الطلب",
                                            status == OrderStatus.Delivered || status == OrderStatus.Delivered_With_Edit_Price || status == OrderStatus.Finished || status == OrderStatus.Completed || status == OrderStatus.Returned || status == OrderStatus.Returned_And_Paid_DeliveryCost || status == OrderStatus.Returned_And_DeliveryCost_On_Sender || status == OrderStatus.PartialDelivered || status == OrderStatus.PartialReturned || status == OrderStatus.Rejected)
                                    };
                                }
                                @foreach (var step in steps)
                                {
                                    <div class="timeline-item">
                                        <div class="timeline-dot @(step.done ? "done" : "pending")">
                                            <i class="@step.icon"></i>
                                        </div>
                                        <div class="timeline-content">
                                            <h6>@step.title</h6>
                                            @if (step.done)
                                            {
                                                <p><i class="fas fa-check"></i> تم</p>
                                            }
                                            else
                                            {
                                                <p>في الانتظار</p>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="back-link">
                <a href="/"><i class="fas fa-arrow-right"></i> العودة للصفحة الرئيسية</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
