@model PostexS.Models.Domain.TermsAndCondition
@{
    ViewBag.Title = "الشروط و الأحكام " ;
}

<h1 class="text-center mb-30">@ViewBag.Title</h1>
@Html.ValidationSummary(false, "", new { @class = "text-danger" })
@using (Html.BeginForm("Index", "TermsAndCondition", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
@Html.HiddenFor(d=>d.CreateOn)
@Html.HiddenFor(d=>d.DeletedOn)
@Html.HiddenFor(d=>d.Id)
@Html.HiddenFor(d=>d.IsDeleted)
@Html.HiddenFor(d=>d.IsModified)
@Html.HiddenFor(d=>d.ModifiedOn)
@Html.AntiForgeryToken()
<div class="row" style="margin:10px;">
    <div class="col-lg-12 mb-10">
        <div class="form-group">
            <label for="NameEn" class="col-sm-2 control-label required">عربي:</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(x=>x.Arabic, htmlAttributes: new { @class = "form-control valid", rows = 20 })
            </div>
        </div>
    </div>
    <div class="col-lg-12 mb-10">
        <div class="form-group">
            <label for="NameEn" class="col-sm-2 control-label required">انجليزي:</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(x => x.English, htmlAttributes: new { @class = "form-control valid", rows = 20 })
            </div>
        </div>
    </div>
 
</div>
<div class="row" style="margin:10px;">
    <div class="col-lg-10 mb-10">
        <div class="form-group">
            <label for="NameEn" class="col-sm-2 control-label required"></label>
            <div class="col-sm-10">
                <button style="text-align:center !important" type="submit" class="btn btn-success">تعديل</button>
            </div>
        </div>

    </div>
</div>


 }
@section Scripts{
    <script src="~/Content/assets/tinymce/tinymce.js"></script>
    <script>
        tinymce.init({
            selector: "textarea"
        });
    </script>
}