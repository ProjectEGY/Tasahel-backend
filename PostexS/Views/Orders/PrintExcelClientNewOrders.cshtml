<script>
    function toggle(source) {
        checkboxes = document.getElementsByName('OrdersId[]');
        for (var i = 0, n = checkboxes.length; i < n; i++) {
            checkboxes[i].checked = source.checked;
        }
    }
    // مزامنة checkboxes الأعمدة الاختيارية مع الحقول المخفية
    document.querySelectorAll('.excel-col-option').forEach(function (cb) {
        cb.addEventListener('change', function () {
            var colName = this.getAttribute('data-col');
            document.getElementById('hdn_' + colName).value = this.checked ? 'true' : 'false';
        });
    });
    document.getElementById('excelExportForm').addEventListener('submit', function () {
        document.querySelectorAll('.excel-col-option').forEach(function (cb) {
            var colName = cb.getAttribute('data-col');
            document.getElementById('hdn_' + colName).value = cb.checked ? 'true' : 'false';
        });
    });
</script>

