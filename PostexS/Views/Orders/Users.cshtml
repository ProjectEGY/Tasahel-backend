                        </label>
                        @if (Model != null)
                        {
                            for (int i = 0; i < Model.Count(); i++)
                            {
                                <tr>
                                    <td>
                                        @switch (Model[i].OrderCompleted)
                                        {
                                            case OrderCompleted.OK:
                                                <span class="badge g-light-blue">تم تسويتة</span>
                                                break;
                                            case OrderCompleted.NOK:
                                                <span class="badge bg-gray">لم يتم تسويتة</span>
                                                break;
                                        }
