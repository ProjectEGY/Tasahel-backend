    <script>


        function prepareExport(exportType) {
            const selectedIds = exportType === 'selected'
                ? Array.from(document.querySelectorAll('input[name="OrdersId[]"]:checked')).map(x => parseInt(x.value)).filter(id => id > 0)
                : Array.from(document.querySelectorAll('input[name="OrdersId[]"]')).map(x => parseInt(x.value)).filter(id => id > 0);

            if (selectedIds.length === 0) {
                Swal.fire('تنبيه', 'برجاء تحديد طلب واحد على الأقل للتصدير', 'warning');
                return;
            }

            // مزامنة checkboxes الأعمدة الاختيارية مع الحقول المخفية
            document.querySelectorAll('.excel-col-option').forEach(function (cb) {
                var colName = cb.getAttribute('data-col');
                document.getElementById('hdn_' + colName).value = cb.checked ? 'true' : 'false';
            });

            // إضافة IDs الطلبات في الفورم المخفي
            var container = document.getElementById('excelExportIdsContainer');
            container.innerHTML = '';
            selectedIds.forEach(function (id) {
                var input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'OrdersId';
                input.value = id;
                container.appendChild(input);
            });

            // إرسال الفورم
            document.getElementById('excelExportHiddenForm').submit();
        }

        function preparePrint(printType) {
            const selectedIds = Array.from(document.querySelectorAll('input[name="OrdersId[]"]:checked')).map(x => parseInt(x.value)).filter(id => id > 0);

            if (selectedIds.length === 0) {
                Swal.fire('تنبيه', 'برجاء تحديد طلب واحد على الأقل للطباعة', 'warning');
                return;
            }

            // بناء query string بنفس الطريقة اللي بيستخدمها PrintAllNew
            var queryString = selectedIds.map(function(id) { return 'Orders=' + id; }).join('&');

            if (printType === 'barcode') {
                window.open('/Orders/PrintAllNewBarCode?' + queryString, '_blank');
            } else {
                window.open('/Orders/PrintAllNew?' + queryString, '_blank');
            }
        }



    </script>
